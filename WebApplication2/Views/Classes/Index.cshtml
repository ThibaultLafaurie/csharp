@using WebApplication2.Models
@model List<ClasseVM>

<h2>Liste des établissements</h2>

<table class="table">
    <tr>
        <th>
            Nom de l'établissement
        </th>
        <th>
            Niveau
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomEtablissement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Niveau)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ClasseId })
            </td>
        </tr>
    }

</table>
