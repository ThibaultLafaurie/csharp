@using WebApplication2.Models
@model ClasseVM

<h2>Details</h2>

<div>
    <h4>Classe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nom de l'établissement
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomEtablissement)
        </dd>

        <dt>
            Niveau
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Niveau)
        </dd>

    </dl>
    <table class="table">
        <tr>
            <th>
                Nom de l'étudiant
            </th>
            <th>
                Prénom de l'étudiant
            </th>
            <th>
            </th>
        </tr>

        @foreach (var eleve in Model.Eleves)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => eleve.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => eleve.Prenom)
                </td>
            </tr>
        }

    </table>
</div>